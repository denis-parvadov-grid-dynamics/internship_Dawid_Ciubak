<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InternshipAppDawidCiubak" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="textInputStyle">@style/CustomLoginTextInputLayout</item>
        <item name="editTextStyle">@style/CustomLoginEditText</item>
    </style>

    <style name="CustomLoginTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
    </style>

    <style name="CustomLoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="backgroundTint">@color/black</item>
    </style>
</resources>